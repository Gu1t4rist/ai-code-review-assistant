# GitLab Configuration
GITLAB_URL=https://gitlab.company.com
GITLAB_TOKEN=your-gitlab-personal-access-token
GITLAB_WEBHOOK_SECRET=your-webhook-secret-token

# AI Provider Configuration
AI_PROVIDER=anthropic  # openai, anthropic, or azure

# API Keys (only one required based on AI_PROVIDER)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-api-key

# Model Configuration
AI_MODEL=claude-3-5-sonnet-20241022  # or gpt-3.5-turbo, gpt-4, etc.
AI_TEMPERATURE=0.3
AI_MAX_TOKENS=4096

# Application Settings
APP_ENV=development  # development, staging, production
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
PORT=8000
HOST=0.0.0.0

# Review Configuration
MAX_DIFF_SIZE=10000  # Maximum number of lines to analyze per file
MAX_CONCURRENT_REVIEWS=3  # Number of files to review in parallel

# HTTP Configuration
HTTP_TIMEOUT=30.0  # HTTP request timeout in seconds

# Features
ENABLE_SECURITY_SCAN=true
ENABLE_PERFORMANCE_CHECK=true
ENABLE_METRICS=false  # Future enhancement - Prometheus metrics collection
PROMETHEUS_ENABLED=false  # Future enhancement - Prometheus endpoint
RATE_LIMIT_ENABLED=false  # Future enhancement - API rate limiting

# Webhook
WEBHOOK_VERIFY_SSL=true
