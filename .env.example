# GitLab Configuration
GITLAB_URL=https://gitlab.company.com
GITLAB_TOKEN=your-gitlab-personal-access-token
GITLAB_WEBHOOK_SECRET=your-webhook-secret-token

# AI Provider Configuration
AI_PROVIDER=anthropic 

# API Keys (only one required based on AI_PROVIDER)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-api-key

# Model Configuration
AI_MODEL=claude-3-5-sonnet-20241022
AI_TEMPERATURE=0.3
AI_MAX_TOKENS=4096

# Application Settings
APP_ENV=development  # development, staging, production
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
PORT=8000
HOST=0.0.0.0

# Review Configuration
MAX_DIFF_SIZE=10000  # Maximum number of lines to analyze
REVIEW_TIMEOUT=300  # seconds
MIN_FILES_FOR_REVIEW=1
MAX_FILES_FOR_REVIEW=50
MAX_CONCURRENT_REVIEWS=3  # Number of files to review in parallel
MIN_TEST_COVERAGE=80  # percentage

# HTTP Configuration
HTTP_TIMEOUT=30.0  # HTTP request timeout in seconds

# Features
ENABLE_SECURITY_SCAN=true
ENABLE_PERFORMANCE_CHECK=true
ENABLE_STYLE_CHECK=true
ENABLE_AUTO_LABELING=true
ENABLE_METRICS=true

# Database (optional, for storing metrics and history)
DATABASE_URL=postgresql://user:password@localhost:5432/ai_review
REDIS_URL=redis://localhost:6379/0

# Monitoring
SENTRY_DSN=
PROMETHEUS_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=30

# Webhook
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_VERIFY_SSL=true

# Cache
CACHE_ENABLED=true
CACHE_TTL=3600  # seconds
